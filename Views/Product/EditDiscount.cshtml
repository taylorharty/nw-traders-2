@model Discount
<h2 class="mt-3"><i class="far fa-address-card"></i> Edit Discount</h2>

<form method="post" asp-action="EditDiscount">
    <div asp-validation-summary="All" style="color:red;"></div>

    <input type="hidden" asp-for="DiscountId" />

    <div class="form-group mt-2">
        <label>Current Product</label>
        <input class="form-control" value="@Model.Product?.ProductName" readonly />
    </div>

    <div class="form-group mt-2">
        <label asp-for="@Model.Title">Title</label>
        <input asp-for="@Model.Title" class="form-control" placeholder="Title" />
    </div>
    <div class="form-group mt-2">
        <label asp-for="@Model.Description">Description</label>
        <input asp-for="@Model.Description" class="form-control" placeholder="Description" />
    </div>
    <div class="form-group mt-2">
        <label asp-for="@Model.DiscountPercent">DiscountPercent</label>
        <input type="number" step="0.01" max="100" asp-for="@Model.DiscountPercent" class="form-control" placeholder="Percentage" value="@(Model?.DiscountPercent * 100)" />
    </div>
    <div class="form-group mt-2">
        <label asp-for="@Model.StartTime">StartTime</label>
        <input type="date" asp-for="@Model.StartTime" class="form-control" />
    </div>
    <div class="form-group mt-2">
        <label asp-for="@Model.EndTime">EndTime</label>
        <input type="date" asp-for="@Model.EndTime" class="form-control" />
    </div>
    <button type="submit" class="btn btn-outline-primary mt-2 mb-4">Save</button>
</form>
