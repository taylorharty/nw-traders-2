@model Discount
<h2 class="mt-3"><i class="far fa-address-card"></i> Customer Register</h2>

<form method="post" asp-action="AddDiscount">
    <div asp-validation-summary="All" style="color:red;"></div>

    <div class="form-group mt-2">
        <label asp-for="@Model.Title">Title</label>
        <input asp-for="@Model.Title" class="form-control" placeholder="Title" />
    </div>
    <div class="form-group mt-2">
        <label asp-for="@Model.Description">Description</label>
        <input asp-for="@Model.Description" class="form-control" placeholder="Description" />
    </div>
    <div class="form-group mt-2">
        <label asp-for="@Model.DiscountPercent">DiscountPercent</label>
        <input type="number" step="0.01" max="100" asp-for="@Model.DiscountPercent" class="form-control"
            placeholder="Percentage" />
    </div>
    <div class="form-group mt-2">
        <label asp-for="@Model.ProductId">Product</label>
        <select asp-for="@Model.ProductId" class="form-control" placeholder="Product">
            @foreach (Product p in ViewBag.Products)
            {
                <option value="@p.ProductId">@p.ProductName</option>
            }
        </select>
    </div>
    <div class="form-group mt-2">
        <label asp-for="@Model.StartTime">StartTime</label>
        <input type="date" asp-for="@Model.StartTime" class="form-control" />
    </div>
    <div class="form-group mt-2">
        <label asp-for="@Model.EndTime">EndTime</label>
        <input type="date" asp-for="@Model.EndTime" class="form-control" />
    </div>
    <button type="submit" class="btn btn-outline-primary mt-2 mb-4">Register</button>
</form>